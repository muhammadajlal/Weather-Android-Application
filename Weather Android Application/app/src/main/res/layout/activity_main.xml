                android:layout_height="wrap_content"
                android:text="--" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView38"
                android:layout_width="198dp"
                android:layout_height="match_parent"
                android:text="Wind speed" />

