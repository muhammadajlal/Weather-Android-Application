        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView39"
                android:layout_width="198dp"
                android:layout_height="match_parent"
                android:text="Sunset time" />

